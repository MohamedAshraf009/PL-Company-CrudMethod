@model DepartmentViewModel
@{
    ViewData["Title"] = "update";
}

<h1>update</h1>


<div class="row">
    <div class="col-6">
        <form asp-action="update" asp-asp-controller="Department">
            <input hidden asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" placeholder="name" class="form-control" /><br />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.code" class="col-form-label"></label>
                <input asp-for="@Model.code" placeholder="code" class="form-control" /><br />
                <span asp-validation-for="@Model.code" class="text-danger"></span>

            </div>
       

            <input type="submit" value="update" /><br />
            <a asp-action="Index" class="btn btn-light">back</a>
        </form>
    </div>
</div>


@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}