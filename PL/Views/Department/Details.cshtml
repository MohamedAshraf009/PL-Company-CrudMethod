
@model DepartmentViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>

<br />
<br />

<div class="row">
    <div class="col-12">
         <div class="form-group">
             <label asp-for="@Model.code"  class="col-from-label"></label>
             <input asp-for="@Model.code" class="form-control" readonly />
         </div>
        <div class="form-group">
            <label asp-for="@Model.Name" class="col-from-label"></label>
            <input asp-for="@Model.Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.DateOfCreation" class="col-from-label"></label>
            <input asp-for="@Model.DateOfCreation" class="form-control" readonly />
        </div>
        <br />
        <a class="btn btn-success" asp-action="update" asp-route-id="@Model.Id">edit</a>
        <a class="btn btn-info" asp-action="Index">back</a>

    </div>
</div>