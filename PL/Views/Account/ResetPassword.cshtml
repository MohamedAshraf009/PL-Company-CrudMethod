

@model ResetPasswordViewModel

<form class="mx-1 mx-md-4" asp-action="ResetPassword">
    <input hidden asp-for="@Model.Token" />
    <input hidden asp-for="@Model.Email" />

    <div class="d-flex flex-row align-items-center mb-4">
        @*<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>*@
        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="form2Example2" asp-for="@Model.Password" class="form-control" />
            <label class="form-label" for="form2Example2" asp-for="@Model.Password">Password</label>
            <span asp-validation-for="@Model.Password"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        @*<i class="fas fa-lock fa-lg me-3 fa-fw"></i>*@
        <!-- Password input -->
        <div class="form-outline mb-4">
            <input type="password" id="form2Example2" asp-for="@Model.ConfirmPassword" class="form-control" />
            <label class="form-label" for="form2Example2" asp-for="@Model.ConfirmPassword">Repeat your password</label>
            <span asp-validation-for="@Model.ConfirmPassword"></span>
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-primary btn-lg" value="ResetPassword">
</form>



@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}