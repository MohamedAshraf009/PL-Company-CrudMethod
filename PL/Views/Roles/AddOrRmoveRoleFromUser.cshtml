@model List<UsersInRoles> 
@{
    ViewData["Title"] = "AddOrRmoveRoleFromUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddOrRmoveRoleFromUser</h1>

<div class="row">
    <div class="col-6">
        <form asp-action="AddOrRmoveRoleFromUser" asp-controller="Roles" asp-route-RoleId="@ViewBag.RoleId">
            @for (int i = 0; i < Model.Count; i++)
            {
             <div class="form-group">
                    <label asp-for="@Model[i].isSelected" class="col-form-label">@Model[i].UserName</label>
                    <input asp-for="@Model[i].isSelected" class="form-control" /><br />
            </div>
            
            <input asp-for="@Model[i].UserId" type="hidden" class="form-control" />
            <input asp-for="@Model[i].UserName" type="hidden"  class="form-control" />

            <br />
            

            }
            <input type="submit" value="update" /><br />
            <a asp-action="Index" class="btn btn-light">back</a>
            <a asp-action="Update" class="btn btn-light" asp-controller="Roles"
            asp-route-RoleId="@ViewBag.RoleId">cancel</a>


        </form>
    </div>
</div>