@model IdentityRole
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>



<div class="row">
    <div class="col-6">
        <form asp-action="update" asp-asp-controller="Roles">
            <input hidden asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" placeholder="UserName" class="form-control" /><br />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="my-3">
                <a class="btn btn-info" asp-action="AddOrRmoveRoleFromUser"
                   asp-controller="Roles" asp-route-RoleId="@Model.Id">add role to user Or Remove Role from user</a>
            </div>
            <input type="submit" value="update" /><br />
            <a asp-action="Index" class="btn btn-light">back</a>
        </form>
    </div>
</div>