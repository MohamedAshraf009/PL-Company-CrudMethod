@model EmployeeViewModel
@inject IDepartmentRepo departmentRepo
@{
    ViewData["Title"] = "update";
    var department = new SelectList(await departmentRepo.GetAll(),"Id","Name");
}

<h1>update</h1>

<div class="row">
    <div class="col-6">
        <form asp-action="update" asp-asp-controller="employee" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" placeholder="name" class="form-control" /><br />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.age" class="col-form-label"></label>
                <input asp-for="@Model.age" placeholder="age" class="form-control" /><br />
                <span asp-validation-for="@Model.age" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.address" class="col-form-label"></label>
                <input asp-for="@Model.address" placeholder="address" class="form-control" /><br />
                <span asp-validation-for="@Model.address" class="text-danger"></span>

            </div>            <div class="form-group">
                <label asp-for="@Model.salary" class="col-form-label"></label>
                <input asp-for="@Model.salary" placeholder="salary" class="form-control" /><br />
                <span asp-validation-for="@Model.salary" class="text-danger"></span>

            </div>            <div class="form-group">
                <label asp-for="@Model.isActive" class="form-check-label"></label>
                <input asp-for="@Model.isActive" placeholder="isActive" type="checkbox" class="form-check-input" /><br />
                <span asp-validation-for="@Model.isActive" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.Image" class="col-form-label"></label>
                <input type="file" asp-for="@Model.Image" placeholder="photo" class="form-control" /><br />
                <span asp-validation-for="@Model.Image" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.email" class="col-form-label"></label>
                <input asp-for="@Model.email" placeholder="email" class="form-control" /><br />
                <span asp-validation-for="@Model.email" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="@Model.depId" class="col-form-label"></label>
                <select asp-for="@Model.depId" placeholder="department Id" asp-items="department"
                        class="form-control">
                    <options>select department</options>
                </select>
                <br />
                <span asp-validation-for="@Model.depId" class="text-danger"></span>

            </div>
            @*            <select asp-for="DeptNo" asp-items="ViewBag.dept">
            <option>select department</option>
            </select>*@

            <input type="submit" value="add" /><br />
            <a asp-action="Index" asp-controller="Employee" class="btn btn-light">back</a>
        </form>
    </div>
</div>


@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}