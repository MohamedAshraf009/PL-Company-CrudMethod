
@model EmployeeViewModel
@{
    ViewData["Title"] = "details";
}

<h1>employee details</h1>


<div class="row">
    <div class="col-12">
        <div class="form-group">
            <label asp-for="@Model.email" class="col-from-label"></label>
            <input asp-for="@Model.email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name" class="col-from-label"></label>
            <input asp-for="@Model.Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.phoneNumber" class="col-from-label"></label>
            <input asp-for="@Model.phoneNumber" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.salary" class="col-from-label"></label>
            <input asp-for="@Model.salary" class="form-control" readonly />
        </div>        <div class="form-group">
            <label asp-for="@Model.isActive" class="col-from-label"></label>
            <input asp-for="@Model.isActive" class="form-control" readonly />
        </div>        <div class="form-group">
            <label asp-for="@Model.department.Name" class="col-from-label"></label>
            <input asp-for="@Model.department.Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.HireDate" class="col-from-label"></label>
            <input asp-for="@Model.HireDate" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.address" class="col-from-label"></label>
            <input asp-for="@Model.address" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="@Model.age" class="col-from-label"></label>
            <input asp-for="@Model.age" class="form-control" readonly />
        </div>
        <div>
            <img src="~/Files/images/@Model.ImageUrl" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.dateOfcreation" class="col-from-label"></label>
            <input asp-for="@Model.dateOfcreation" class="form-control" readonly />
        </div>
        <br />
        <a class="btn btn-success" asp-action="update" asp-route-id="@Model.Id">edit</a>
        <a class="btn btn-info" asp-action="Index">back</a>

    </div>
</div>