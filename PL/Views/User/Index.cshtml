@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Users";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>

<h1>All Users</h1>

<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search by Name" name="searchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>

@if ((Model?.Count() > 0))
{
    <table class="table table-dark">
        <thead>
            <tr>
                @*<th scope="col">#</th>*@
                <th scope="col">@Html.DisplayNameFor(a=>a.Id)</th>
                <th scope="col">@Html.DisplayNameFor(a=>a.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(a=>a.Email)</th>
                <th scope="col">@Html.DisplayNameFor(a=>a.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(a=>a.IsAgree)</th>
                <th scope="col">details</th>
                <th scope="col">edit</th>
                <th scope="col">delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.IsAgree</td>
                    <partial name="ButtonsViewPartial" model="@item.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning mt-5">
        <h3>no users found</h3>
    </div>

}
